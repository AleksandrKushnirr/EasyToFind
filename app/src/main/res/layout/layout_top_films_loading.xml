<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="20dp"
        android:clipToPadding="false">

       <View
           android:id="@+id/title_loader_1"
           android:layout_width="200dp"
           android:layout_height="25dp"
           android:layout_marginTop="20dp"
           android:layout_marginStart="35dp"
           android:background="@drawable/bg_shimmer_loaders"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintStart_toStartOf="parent"/>

       <View
           android:layout_width="100dp"
           android:layout_height="25dp"
           android:layout_marginEnd="20dp"
           android:background="@drawable/bg_shimmer_loaders"
           app:layout_constraintTop_toTopOf="@id/title_loader_1"
           app:layout_constraintBottom_toBottomOf="@id/title_loader_1"
           app:layout_constraintEnd_toEndOf="parent"/>

        <LinearLayout
            android:id="@+id/layout_fake_films_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/title_loader_1">

            <View
                android:layout_width="130dp"
                android:layout_height="220dp"
                android:layout_marginStart="20dp"
                android:layout_marginVertical="5dp"
                android:background="@drawable/bg_shimmer_loaders"/>

            <View
                android:layout_width="130dp"
                android:layout_height="220dp"
                android:layout_marginStart="20dp"
                android:layout_marginVertical="5dp"
                android:background="@drawable/bg_shimmer_loaders"/>

            <View
                android:layout_width="130dp"
                android:layout_height="220dp"
                android:layout_marginStart="20dp"
                android:layout_marginVertical="5dp"
                android:background="@drawable/bg_shimmer_loaders"/>

        </LinearLayout>

        <View
            android:id="@+id/title_loader_2"
            android:layout_width="200dp"
            android:layout_height="25dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="35dp"
            android:background="@drawable/bg_shimmer_loaders"
            app:layout_constraintTop_toBottomOf="@id/layout_fake_films_1"
            app:layout_constraintStart_toStartOf="parent"/>

        <View
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/bg_shimmer_loaders"
            app:layout_constraintTop_toTopOf="@id/title_loader_2"
            app:layout_constraintBottom_toBottomOf="@id/title_loader_2"
            app:layout_constraintEnd_toEndOf="parent"/>

        <LinearLayout
            android:id="@+id/layout_fake_films_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/title_loader_2">

            <View
                android:layout_width="130dp"
                android:layout_height="220dp"
                android:layout_marginStart="20dp"
                android:layout_marginVertical="5dp"
                android:background="@drawable/bg_shimmer_loaders"/>

            <View
                android:layout_width="130dp"
                android:layout_height="220dp"
                android:layout_marginStart="20dp"
                android:layout_marginVertical="5dp"
                android:background="@drawable/bg_shimmer_loaders"/>

            <View
                android:layout_width="130dp"
                android:layout_height="220dp"
                android:layout_marginStart="20dp"
                android:layout_marginVertical="5dp"
                android:background="@drawable/bg_shimmer_loaders"/>

        </LinearLayout>

        <View
            android:id="@+id/title_loader_3"
            android:layout_width="200dp"
            android:layout_height="25dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="35dp"
            android:background="@drawable/bg_shimmer_loaders"
            app:layout_constraintTop_toBottomOf="@id/layout_fake_films_2"
            app:layout_constraintStart_toStartOf="parent"/>

        <View
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/bg_shimmer_loaders"
            app:layout_constraintTop_toTopOf="@id/title_loader_3"
            app:layout_constraintBottom_toBottomOf="@id/title_loader_3"
            app:layout_constraintEnd_toEndOf="parent"/>

        <LinearLayout
            android:id="@+id/layout_fake_films_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/title_loader_3">

            <View
                android:layout_width="130dp"
                android:layout_height="220dp"
                android:layout_marginStart="20dp"
                android:layout_marginVertical="5dp"
                android:background="@drawable/bg_shimmer_loaders"/>

            <View
                android:layout_width="130dp"
                android:layout_height="220dp"
                android:layout_marginStart="20dp"
                android:layout_marginVertical="5dp"
                android:background="@drawable/bg_shimmer_loaders"/>

            <View
                android:layout_width="130dp"
                android:layout_height="220dp"
                android:layout_marginStart="20dp"
                android:layout_marginVertical="5dp"
                android:background="@drawable/bg_shimmer_loaders"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>